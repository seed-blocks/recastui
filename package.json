{
	"name": "recastui.com",
	"version": "0.1.0",
	"description": "Simple, Accessible & White-label UI Components & Design System for your Solid Applications ðŸ™Œ",
	"homepage": "https://github.com/seed-blocks/recastui",
	"bugs": "https://github.com/seed-blocks/recastui/issues",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/seed-blocks/recastui.git"
	},
	"keywords": [
		"react",
		"theming",
		"component-library",
		"ui-components",
		"whitelabel",
		"design-system",
		"white-label",
		"solidjs",
		"react-component-library",
		"tailwindcss"
	],
	"author": "Praney Behl <hello@recastui.com> (https://recastui.com)",
	"license": "MIT",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"changeset": "changeset",
		"clean": "turbo run clean",
		"commit": "git-cz",
		"lint": "turbo run lint",
		"prepare": "husky install",
		"release": "turbo run build && changeset publish",
		"test": "turbo run test",
		"typecheck": "turbo run typecheck",
		"format": "prettier --write \"**/*.{astro,ts,jsx,tsx,md,mdx}\"",
		"version-packages": "changeset version"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{md,mdx,json}": [
			"prettier --write"
		],
		"*.{ts?(x),js?(x)}": [
			"eslint",
			"prettier --write"
		],
		"package.json": "npx sort-package-json"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"peerDependencies": {
		"solid-js": "1.1.2"
	},
	"devDependencies": {
		"@changesets/cli": "2.24.4",
		"@commitlint/cli": "17.1.2",
		"@commitlint/config-conventional": "17.1.0",
		"@commitlint/cz-commitlint": "17.1.2",
		"@commitlint/prompt": "17.1.2",
		"@testing-library/dom": "8.17.1",
		"@testing-library/jest-dom": "5.16.5",
		"@testing-library/user-event": "14.4.3",
		"@types/jest": "29.0.0",
		"@types/lodash.merge": "4.6.7",
		"@types/node": "18.7.16",
		"@types/prismjs": "1.26.0",
		"@types/scroll-lock": "2.1.0",
		"@types/testing-library__jest-dom": "5.14.5",
		"@typescript-eslint/eslint-plugin": "5.36.2",
		"@typescript-eslint/parser": "5.36.2",
		"chalk": "4.1.2",
		"commitizen": "4.2.5",
		"eslint": "8.34.0",
		"eslint-config-anastrophe": "workspace:*",
		"eslint-import-resolver-typescript": "3.5.1",
		"eslint-plugin-import": "2.26.0",
		"eslint-plugin-jsx-a11y": "6.6.1",
		"eslint-plugin-prettier": "4.2.1",
		"eslint-plugin-simple-import-sort": "8.0.0",
		"husky": "8.0.0",
		"inquirer": "8",
		"jest": "29.0.2",
		"jest-environment-jsdom": "29.0.3",
		"lint-staged": "13.0.3",
		"prettier": "2.8.4",
		"prettier-plugin-astro": "^0.8.0",
    "prettier-plugin-tailwindcss": "^0.1.13",
		"prismjs": "1.29.0",
		"rimraf": "3.0.2",
		"standard-version": "9.5.0",
		"ts-jest": "29.0.0",
		"turbo": "latest",
		"typescript": "4.9.5"
	},
	"volta": {
		"node": "18.6.0"
	}
}
